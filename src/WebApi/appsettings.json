{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "Database": "Server=localhost;Port=5432;Database=shorturl;User Id=postgres;Password=12345;"
  },
  "DatabaseOptions": {
    "EnabledDetailedErrors": true,
    "EnabledSensitiveDataLogging": true,
    "MaxRetryCount": 3,
    "CommandTimeOut": 30
  },
  "AllowedHosts": "*"
}